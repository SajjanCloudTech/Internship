pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '3')) 
    }

    environment {
        TF_DIR = "terraform-week3/environments/dev"  
    }

    stages {
        stage('SCM Checkout') {
            steps {
                script {
                       checkout scm
                }
            }
        }

        stage('Terraform Init') {
            steps {
                script {
                    sh "cd ${TF_DIR} && terraform init"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                script {
                    sh "cd ${TF_DIR} && terraform apply -auto-approve"
                }
            }
        }
    }

    post {
        success {
            echo "Terraform applied successfully in ${TF_DIR}!"
        }
        failure {
            echo "Terraform apply failed in ${TF_DIR}!"
        }
    }
}
